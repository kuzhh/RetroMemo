{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build SDL (MinGW64)",
      "type": "shell",
      "command": "C:/msys64/mingw64/bin/gcc.exe",
      "args": [
        "src/main.c",
        "src/game.c",

        "-Iinclude",
        "-IC:/msys64/mingw64/include",

        "-LC:/msys64/mingw64/lib",
        "-mconsole",
        "-lSDL2main",
        "-lSDL2",
        "-lSDL2_image",
        "-lSDL2_ttf",

        "-o",
        "main.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
